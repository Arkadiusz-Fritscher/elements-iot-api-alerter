generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  createdAt DateTime  @default(now())
  firstName String?
  lastLogin DateTime?
  lastName  String?
  password  String    @default("EsweFernwaerme2024")
  role      Role      @default(USER)
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Device {
  id         String       @id @default(uuid())
  slug       String       @unique
  name       String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  lastSeen   DateTime?
  status     DeviceStatus @default(OK)
  readings   Reading[]
  statistics Statistic[]
}

model StatisticTypeDefinition {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String?
  unit        String
  createdAt   DateTime?   @default(now())
  updatedAt   DateTime?   @updatedAt
  statistics  Statistic[]
}

model Reading {
  id         String   @id @default(uuid())
  deviceId   String
  measuredAt DateTime
  battery    Float
  iso1       Float
  iso2       Float
  loop1      Float
  loop2      Float
  temp       Int?
  device     Device   @relation(fields: [deviceId], references: [id])
}

model Statistic {
  value      Float
  sampleSize Int
  createdAt  DateTime?               @default(now())
  updatedAt  DateTime?               @updatedAt
  deviceId   String
  id         Int                     @id @default(autoincrement())
  typeId     Int
  type       StatisticTypeDefinition @relation(fields: [typeId], references: [id])
  device     Device                  @relation(fields: [deviceId], references: [id])
}

enum Role {
  VIEWER
  USER
  ADMIN
}

enum DeviceStatus {
  OK
  ERROR
}
