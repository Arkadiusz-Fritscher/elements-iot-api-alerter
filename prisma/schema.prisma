// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the `User` table in the database
model User {
  id        Int       @id @default(autoincrement())
  role      Role      @default(USER)
  firstName String?
  lastName  String?
  username  String    @unique
  email     String    @unique
  password  String    @default("EsweFernwaerme2024")
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Define a `Role` enum in your schema
enum Role {
  VIEWER
  USER
  ADMIN
}

model Device {
  id          String       @id @default(uuid())
  slug        String       @unique
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  lastSeen    DateTime?
  lastReading DateTime?
  status      DeviceStatus @default(UNKNOWN)
  statistic   Statistic[]
}

enum DeviceStatus {
  OK
  ERROR
  UNKNOWN
}

model StatisticTypeDefinition {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String?
  unit        String
  createdAt   DateTime?   @default(now())
  updatedAt   DateTime?   @updatedAt
  statistics  Statistic[]
}

model Statistic {
  id         Int                     @id @default(autoincrement())
  value      Float
  sampleSize Int
  device     Device                  @relation(fields: [deviceId], references: [id])
  deviceId   String
  createdAt  DateTime?               @default(now())
  updatedAt  DateTime?               @updatedAt
  type       StatisticTypeDefinition @relation(fields: [typeId], references: [id])
  typeId     Int
}
